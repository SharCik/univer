<div class="container" style="padding: 50px;">
  <div class="row">
    <div class="col-md-3"> </div>
    <div class="col-md-6" style="background-color: #f9f9f9;">
    <legend>Create new University</legend>
      <%= form_for(@univer) do |f| %>

        <div class="form-group"><%= f.label :name %></div>
        <div class="form-group"><%= f.text_area :name, size: "55x1" %></div>

        <div class="form-group"><%= f.label :short_name %></div>
        <div class="form-group"><%= f.text_area :short_name, size: "55x1" %></div>

        <div class="form-group"><%= f.label :description %></div>
        <div class="form-group"><%= f.text_area :description , size: "55x5" %></div>

        <div class="form-group"><%= f.label :initial_cost %></div>
        <div class="form-group"><%= f.text_area :initial_cost, size: "55x1" %></div>
        
        <div class="form-group"><%= f.label :image %></div>
        <div class="form-group"><%= f.file_field :image %></div>

        <%= f.submit "Create!", class: "btn btn-large btn-primary" %>
        <%= link_to "Back", root_path, {:class => "btn btn-link"} %>
      <% end %>
    </div>
    <div class="col-md-3"> </div>
  </div>
</div>