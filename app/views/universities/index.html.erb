<div class="container" style="padding: 50px;">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <table class="table table-striped table-hover ">
      <tbody>
        <% @univers.each do |univer| %>
        <tr>
          <td><%= link_to univer.name, university_path(univer.id) %></td>
          <td><%= univer.short_name %></td>
            <td style="color: green;"><%= univer.initial_cost.to_s + " $" if univer.initial_cost != nil%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2"></div>
</div>